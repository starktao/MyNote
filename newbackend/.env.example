DATABASE_URL=sqlite:///./mynote.db
NOTE_OUTPUT_DIR=note_results
DATA_DIR=data
MAX_CONCURRENCY=3
SCREENSHOT_MODE=smart
SCREENSHOT_WINDOW=1.2
SCREENSHOT_CANDIDATES=5
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8000

# P2.2新增：Whisper性能优化配置
WHISPER_MODEL_SIZE=base  # tiny/base/small/medium/large
WHISPER_DEVICE=auto  # auto/cpu/cuda
WHISPER_COMPUTE_TYPE=auto  # auto/int8/float16/float32
WHISPER_ENABLE_VAD=true  # 启用语音活动检测
WHISPER_BEAM_SIZE=5  # 束搜索大小
WHISPER_NO_SPEECH_THRESHOLD=0.7  # 无语音阈值
WHISPER_COMPRESSION_RATIO_THRESHOLD=2.3  # 压缩比阈值
WHISPER_CONDITION_ON_PREVIOUS_TEXT=false  # 避免错误累积
WHISPER_MIN_SILENCE_DURATION_MS=900  # VAD最小静音时长
WHISPER_SPEECH_PAD_MS=300  # VAD语音填充

# P2.2新增：转写进度反馈配置
TRANSCRIBE_PROGRESS_ENABLED=true  # 启用转写进度反馈
TRANSCRIBE_PROGRESS_INTERVAL=50  # 进度更新间隔（处理的片段数）
TRANSCRIBE_PROGRESS_TIMEOUT=1200  # 转写超时时间（秒）
TRANSCRIBE_KEEPALIVE_INTERVAL=25  # SSE保活间隔（秒）
